<AnchorPane id="AnchorPane" minHeight="100" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.insightr.spellmonger.Controller">

    <children>

        <Rectangle styleClass="player-box" fx:id="player1" x="10" y="10" width="180" height="170"/>
        <Rectangle styleClass="player-box" fx:id="player2" x="10" y="470" width="180" height="170"/>

        <Rectangle styleClass="discard-box" fx:id="discard1" x="600" y="26" width="105" height="150" fill="gray"  stroke="black"/>
        <Text layoutX="620" layoutY="21" id="discard1Name" text="Discard 1"></Text>
        <Rectangle styleClass="discard-box" fx:id="discard2" x="600" y="480" width="105" height="150" fill="gray"  stroke="black"/>
        <Text layoutX="620" layoutY="645" id="discard1Name" text="Discard 2"></Text>

        <Label styleClass="player-name" layoutX="30" layoutY="55" id="player1Name" fx:id="namePlayer1" text="Player 1"></Label>
        <Label styleClass="player-hp" layoutX="30" layoutY="80" id="hpPlayer1" fx:id="hpPlayer1" text="20"></Label>
        <Label styleClass="player-energy" layoutX="30" layoutY="105" id="manaPlayer1" fx:id="manaPlayer1" text="1"></Label>

        <Label styleClass="player-name" layoutX="30" layoutY="520" id="player2Name" fx:id="namePlayer2" text="Player 2"/>
        <Label styleClass="player-hp" layoutX="30" layoutY="545" id="hpPlayer2" fx:id="hpPlayer2" text="20"/>
        <Label styleClass="player-energy" layoutX="30" layoutY="570" id="manaPlayer2" fx:id="manaPlayer2" text="1"/>

        <Label styleClass="game-msg" layoutX="750" layoutY="500" id="player2Name" fx:id="gameMsg" text="Play !"/>
        <Button styleClass="pass-button" text="Play no card" layoutX="750" layoutY="580" onAction="#playNoCard"/>

        <Button styleClass="draw-button" layoutX="480" layoutY="110" mnemonicParsing="false" onAction="#draw" fx:id="draw1Button" text="Draw"/>
        <Button styleClass="draw-button" layoutX="480" layoutY="510" mnemonicParsing="false" onAction="#draw" fx:id="draw2Button" text="Draw"/>

        <HBox fx:id="boardP1"/>
        <HBox fx:id="boardP2"/>

        <ScrollPane styleClass="board" fx:id="board1" layoutY="183" layoutX="10"/>
        <GridPane fx:id="boardG1"/>
        <ScrollPane styleClass="board" fx:id="board2" layoutY="323" layoutX="10"/>
        <GridPane fx:id="boardG2"/>

        <HBox fx:id="handP1"/>
        <HBox fx:id="handP2"/>

        <ScrollPane styleClass="hand" fx:id="hand1" layoutY="16" layoutX="210"/> <!-- 26 & 480-->
        <GridPane fx:id="handG1"/>

        <ScrollPane styleClass="hand" fx:id="hand2" layoutY="474" layoutX="210"/>
        <GridPane fx:id="handG2"/>

    </children>

</AnchorPane>